{
    "name": "osenco/tailwindo",
    "description": "Convert Bootstrap CSS to Tailwind CSS",
    "keywords": [
    "CSS",
    "Tailwind",
    "Bootstrap"
    ],
    "homepage": "https://github.com/osenco/tailwindo",
    "license": "MIT",
    "authors": [
        {
            "name": "Osen",
            "email": "hi@osen.co.ke"
        }
    ],

    "require": {
        "php": "^7.4",
        "symfony/console": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    
    "autoload": {
        "psr-4": {
            "Osen\\Tailwindo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Osen\\Tailwindo\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "bin": [
        "tailwindo"
    ]
}
